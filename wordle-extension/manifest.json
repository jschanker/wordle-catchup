{
  "name": "Wordle Catch-up",
  "description": "Play all missed days' Wordle games without losing your streak!",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "*://www.nytimes.com/games/wordle/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/wordle_catch-up16.png",
      "32": "/images/wordle_catch-up32.png",
      "48": "/images/wordle_catch-up48.png",
      "128": "/images/wordle_catch-up128.png"
    }
  },
  "icons": {
    "16": "/images/wordle_catch-up16.png",
    "32": "/images/wordle_catch-up32.png",
    "48": "/images/wordle_catch-up48.png",
    "128": "/images/wordle_catch-up128.png"
  },
  "background": {
    "service_worker": "catchup.js"
  }
}
